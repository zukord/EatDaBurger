<h1>Burgers!</h1>
<div id="main">
    <div>
    <h2>Burgers that are not devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devour=false}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div>
    <h2>Burgers that are devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=true}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> To be devoured!
  </div>

  <button type="submit">Add burger</button>
</form>
